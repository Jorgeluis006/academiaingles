<IfModule mod_rewrite.c>
  Options -MultiViews
  RewriteEngine On

  # No rewrite for existing files or directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Allow PHP API folder to be served directly
  RewriteRule ^php/ - [L]

  # Do not rewrite requests for static assets (JS/CSS/images)
  RewriteRule ^(js|assets|css|frontend|public|uploads)/ - [L]

  # Fallback to index.html for client-side routing (React BrowserRouter)
  RewriteRule ^ index.html [L]
</IfModule>
RewriteEngine On
RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]
